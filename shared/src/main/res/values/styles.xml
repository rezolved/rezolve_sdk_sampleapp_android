<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SspBlockBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SspBlockBaseStyle.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/ssp_block_standard_text_size</item>
        <item name="android:paddingBottom">@dimen/ssp_block_paragraph_padding_small</item>
    </style>

    <style name="SspBlockBaseStyle.Answer">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ssp_block_standard_text_size</item>
        <item name="android:padding">@dimen/ssp_block_paragraph_padding</item>
        <item name="android:background">@drawable/ssp_block_input_background</item>
    </style>

    <style name="LightFont">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
