<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/slide_to_buy_button_size"
    android:background="@color/colorPrimary"
    android:id="@+id/buy_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/slide_to_buy_margin"
        android:layout_marginBottom="@dimen/slide_to_buy_margin"
        android:layout_marginStart="@dimen/slide_to_buy_side_margin"
        android:layout_marginEnd="@dimen/slide_to_buy_side_margin">

        <RelativeLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/slide_to_buy_margin_half"
            android:layout_marginEnd="@dimen/slide_to_buy_margin_half"
            android:layout_centerInParent="true"
            android:background="@drawable/slide_to_pay_seekbar_background">

            <TextView
                android:id="@+id/slide_to_pay_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/act_now"
                android:textColor="@color/white"
                android:textSize="@dimen/slide_to_pay_text_size"
                style="@style/LightFont"/>

            <ImageView
                android:id="@+id/slide_to_buy_head"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_slider_head"
                android:alpha="0.7"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>